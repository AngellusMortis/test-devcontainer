{
    "name": "Test",
    "image": "ghcr.io/multimediallc/mm-cli-dev:latest",
    "updateRemoteUserUID": true,
    "containerUser": "app",
    "workspaceFolder": "/opt/app",
    "workspaceMount": "source=${localWorkspaceFolder},target=/opt/app,type=bind,consistency=cached",
    "mounts": [
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.config,target=/home/vscode/.config,type=bind,consistency=cached"
    ],
    "initializeCommand": {
        "mkdir-posix": "echo $HOME && mkdir -p $HOME/.config || true",
        "mkdir-windows": "echo %USERPROFILE% && mkdir %USERPROFILE%/.config || true"
    }
}
